{% extends 'base.html.twig' %}

{% block title %}Setup{% endblock %}

{% block panelTitle %}
<h1 class="h2">Setup</h1>
<div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
        
    </div>
</div>
{% endblock %}

{% block panelContent %}

{% for message in app.flashes('info') %}
	<div class="alert alert-success" role="alert">
        {{ message }}
    </div>
{% endfor %}
<div class="row">
	{# My Lightings #}
	<div class="col col-md-12">
		<div class="modal fade" id="modal-add-luminaire">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="modal-body text-center">
						{% form_theme form 
							'bootstrap_4_horizontal_layout.html.twig' %}
						{{ form_start(form) }}
			    		{{ form_widget(form) }}
			    		<button class="btn">{{ button_label|default('Save') }}</button>
			    		<button type="button" class="btn btn-default" data-dismiss="modal" aria-label="Close">Cancel</button>
						{{ form_end(form) }}
						
					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
		<div class="row">
			<div class="col">
				<ul class="list-group list-group-flush">
				{% for luminaire in all_luminaires %}
					{% if loop.index is divisible by(6) %}
					</ul>
					</div>
					<div class="col">
						<ul class="list-group list-group-flush">
					{% endif %}
					<li class="list-group-item d-flex justify-content-between">
						Lighting #{{ luminaire.address }} [ Serial: {{ luminaire.serial }} ]
						<div class="d-inline">
							<button class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#modal-delete-{{ luminaire.id }}">
					        	<span data-feather="trash-2"></span>
					        </button>
						</div>
					</li>
					<div class="modal fade" id="modal-delete-{{ luminaire.id }}">
	        			<div class="modal-dialog modal-dialog-centered" role="document">
	        				<div class="modal-content">
	        					<div class="modal-body">
	        						<div class="btn-group btn-group-justified align-content-center">
	        						<a class="btn btn-danger" role="button" href="{{ path('delete-luminaire', { 'id': luminaire.id }) }}">Confirm delete</a>
	        						<button type="button" class="btn btn-default" data-dismiss="modal" aria-label="Close">Cancel</button>
	        						</div>
	        					</div>
	        				</div><!-- /.modal-content -->
	        			</div><!-- /.modal-dialog -->
	        		</div><!-- /.modal -->
				{% endfor %}
				</ul>
			</div>
		</div>
		<div class="modal fade" id="modal-add-luminaire">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title">Add a new lighting</h4>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
							<span class="sr-only">Close</span>
						</button>
					</div>
					<div class="modal-body">
						{% form_theme form 
							'bootstrap_4_horizontal_layout.html.twig' %}
						{{ form_start(form) }}			
    					{{ form_widget(form) }}
    					
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						<button class="btn">{{ button_label|default('Add') }}</button>
						{{ form_end(form) }}
					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
	</div>

	{# Groups #}
{# 	<div class="col col-md-6">
		<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
			<h1 class="h5">Clusters</h1>
			<a href="#" class="btn btn-sm btn-outline-secondary"><span data-feather="plus-circle"></span> New group</a>
		</div>
	  	<ul class="list-group list-group-flush">
		{% for cluster in clusters %}
		  <li class="list-group-item">{{ cluster.description }}</li>
		{% endfor %}
		</ul>
	</div> #}

</div>

{% endblock %}

{% block bottomButton %}
    <button class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#modal-add-luminaire"><span data-feather="plus-circle"></span> Add a new lighting</button>
{% endblock %}
