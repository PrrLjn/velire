<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {% block meta %}
        {% endblock %}
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body style="margin-top: 60px;">
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark shadow">

              <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="{{ path('home') }}">VeLiRe Controller</a>
              <span class="navbar-brand">{{ navtitle|default("Dashboard") }}</span>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link" href="#">Sign out</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                  </li>
                </ul>
              </div>


            </nav>
        {% endblock %}
        {% block body %}
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-3 d-none d-md-block bg-light ">
                  <nav class="sidebar">
                    <div class="sidebar-sticky">
                      <ul class="nav flex-column">
                        <li class="nav-item p-2 border">
                          <a class="nav-link active" href="{{ path('home') }}">
                            <span data-feather="home"></span>
                            Dashboard <span class="sr-only">(current)</span>
                          </a>
                        </li>
                        <li class="nav-item p-2 border">
                          <a class="nav-link" href="#submenu1" data-toggle="collapse">
                            <span data-feather="settings"></span>
                            Setup
                          </a>
                          <div id="submenu1" class="collapse">
                              <div class="nav-item p-2 border" href="#">
                                  <a class="nav-link text-right" href="{{ path('my-lightings') }}">My Lightings</a>
                              </div>
                              <div class="nav-item p-2 border" href="#">
                                  <a class="nav-link text-right" href="{{ path('connected-lightings') }}">Connected lighting</a>
                              </div>
                              <div class="nav-item p-2 border" href="#">
                                  <a class="nav-link text-right" href="{{ path('recipes') }}">Recipes</a>
                              </div>
                              <div class="nav-item p-2 border" href="#">
                                  <a class="nav-link text-right" href="{{ path('program') }}">Programs</a>
                              </div>
                          </div>
                        </li>
                          <li class="nav-item dropdown p-2 border">
                              <a class="nav-link" href="#submenu2" data-toggle="collapse">
                                  <span data-feather="sliders"></span>
                                  Control
                              </a>
                              <div id="submenu2" class="collapse">
                                  <div class="nav-item p-2 border" href="#">
                                      <a class="nav-link text-right" href="{{ path('run') }}">Runs</a>
                                  </div>
                                  <div class="nav-item p-2 border" href="#">
                                      <a class="nav-link text-right" href="{{ path('manual') }}">Manual control</a>
                                  </div>
                              </div>
                          </li>
                      </ul>
                    </div>
                  </nav>
                </div>
                <div class="col col-md-8 ml-lg-auto ml-md-1 col-lg-9 px-4 pb-5">
                <main role="main">
                  <nav id="navbar-scroll" class="navbar navbar-light bg-light fixed-bottom">
                    <ul class="nav nav-pills">
                      <li class="nav-item">
                        <a class="nav-link" href="#top"><span data-feather="arrow-up-circle"></span></a>
                      </li>
                      {% block scrollspy %}
                          
                      {% endblock %}
                    </ul>
                    <div class="btn-group">
                      {% block bottomButton %}
                          
                      {% endblock %}
                    </div>
                  </nav>
                  <div data-spy="scroll" data-target="#navbar-scroll" data-offset="0">
                  {% block panelContent %}
                      
                  {% endblock %}
                  </div>
                  
                </main>
                </div>
              </div>
            </div>
        {% endblock %}
        {% block javascripts %}
        	<script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
