{% block StepType_widget %}
  <div class="form-row">
        <div class="col-2">
            {{ form_row(form.rank) }}
        </div>
        <div class="col">
            {{ form_row(form.type) }}
        </div>
        <div class="col">
            {{ form_row(form.value) }}
        </div>
        <div class="col">
            {{ form_row(form.recipe) }}
        </div>
        <div class="col-3">
            <div class="btn-group">
            <a href="#" type="button" class="collection-up btn" title="Move element up"><span data-feather="arrow-up-circle" style="width: 18; height: 18"></span></a>
            <a href="#" type="button" class="collection-down btn" title="Move element down"><span data-feather="arrow-down-circle" style="width: 18; height: 18"></span></a>
            <a href="#" type="button" class="collection-remove btn" title="Delete element"><span data-feather="minus-circle" style="width: 18; height: 18"></span></a>
            <a href="#" type="button" class="collection-add btn" title="Add element"><span data-feather="plus-circle" style="width: 18; height: 18"></span></a>
            <a href="#" type="button" class="collection-duplicate btn" title="Duplicate element"><span data-feather="copy" style="width: 18; height: 18"></span></a>
            </div>
        </div>
    </div>
{% endblock %}



